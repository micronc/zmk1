#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
/*
 |  ESC |  Q  |  W  |  E  |  R  |  T  |.....|  Y  |  U   |  I  |  O  |  P  | BKSP  |
 | TAB  |  A  |  S  |  D  |  F  |  G  |.....|  H  |  J   |  K  |  L  |  ;  | PG_UP |
 | SHFT |  Z  |  X  |  C  |  V  |  B  |.....|  N  |  M   |  ,  |  .  |  /  | PG_DN |
                   | CTRL | MO1 | ALT |.....| SPC | ENT  | MO2 |
*/ 
                        bindings = <
/*Right_Side*/   &kp ESC   &kp Q &kp W &kp E &kp R &kp T      /*Left_Side*/   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
/*Right_Side*/   &kp TAB   &kp A &kp S &kp D &kp F &kp G      /*Left_Side*/   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp PG_UP
/*Right_Side*/   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B      /*Left_Side*/   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp PG_DN
/*Right_Side*/                   &kp LCTRL &mo 1 &kp RALT     /*Left_Side*/   &kp SPACE &kp RET  &mo 2 
                        >;
                };
                lower_layer {
/*
 | TAB  |  BT1   |  BT4   |      |  +  |     |.....|  1  |  2  |  3  |     | UP  | BTCLR |
 | DEL  |  BT2   |  BT5   |      |  -  |     |.....|  4  |  5  |  6  | LFT |     | RGT   |
 | SHFT |  BT3   |        |      |  *  |     |.....|  7  |  8  |  9  |     | DWN |       |
                          | GUI  |  /  | ENT |.....| SPC |  0  | ALT |
*/
                        bindings = <
/*Right_Side*/ &kp TAB    &bt BT_SEL 0  &bt BT_SEL 1 &trans   &kp PLUS  &trans     /*Left_Side*/  &kp N1   &kp N2   &kp N3 &trans    &kp UP    &bt BT_CLR
/*Right_Side*/ &bt DEL    &bt BT_SEL 2  &bt BT_SEL 3 &trans   &kp MINUS &trans     /*Left_Side*/  &kp N4   &kp N5   &kp N6 &kp LEFT  &trans    &kp RIGHT
/*Right_Side*/ &kp LSHFT  &bt BT_SEL N4 &trans       &trans   &kp AMPS  &trans     /*Left_Side*/  &kp N7   &kp N8   &kp N9 &trans    &kp DOWN  &trans
/*Right_Side*/                                       &kp LGUI &kp FSLH  &kp RET    /*Left_Side*/  &kp SPACE  &kp N0   &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | ENT |   | SPC | BTCLR | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &trans   &trans &trans   &trans   &trans      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &kp GRAVE
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
                             &kp LGUI &trans   &kp RET   &kp SPACE   &trans    &kp RALT
                        >;
                };
        };
};
